# Global parameters
[global]
        dns forwarder = {{ dns_forwarder }}
        netbios name = {{ hostname | upper }}
        realm = AD.{{ workgroup_upper }}
        server role = active directory domain controller
        workgroup = {{ workgroup_upper }}
        idmap_ldb:use rfc2307 = yes

[netlogon]
        path = /var/lib/samba/sysvol/ad.{{ workgroup_lower }}/scripts
        read only = No

[sysvol]
        path = /var/lib/samba/sysvol
        read only = No